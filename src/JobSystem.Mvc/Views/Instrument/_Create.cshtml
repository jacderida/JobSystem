@model JobSystem.Mvc.ViewModels.Instruments.InstrumentViewModel

<script src="@Url.Content("~/Scripts/instrument.js")" type="text/javascript"></script>
<div id="create-instrument-container">
@using (Html.BeginForm("Create", "Instrument", FormMethod.Post))
{
	@Html.ValidationSummary(true)
	<fieldset class="fieldset-no-legend fieldset-float-left">
		<div class="editor-label">
			@Html.LabelFor(model => model.Manufacturer)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor(m => m.Manufacturer, new { id = "manufacturer-autocomplete", placeholder = JobSystem.Resources.Common.Labels.TypeaheadPlaceholder })
		</div>
		<div class="editor-label">
			@Html.LabelFor(model => model.ModelNo)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor(m => m.ModelNo, new { id = "model-autocomplete", placeholder = JobSystem.Resources.Common.Labels.TypeaheadPlaceholder })
		</div>
		<div class="editor-label">
			@Html.LabelFor(model => model.Range)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor(model => model.Range, new { @class="short-text", @Value="Not Specified" })
			@Html.ValidationMessageFor(model => model.Range)
		</div>
		<div class="editor-label">
			@Html.LabelFor(model => model.CalibrationTime)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor(model => model.CalibrationTime, new { @class = "short-text", @Value="15" })
			@Html.ValidationMessageFor(model => model.CalibrationTime)
		</div>
		<div class="editor-label">
			@Html.LabelFor(model => model.Description)
		</div>
		<div class="editor-field">
			@Html.TextAreaFor(model => model.Description)
			@Html.ValidationMessageFor(model => model.Description)
		</div>
	</fieldset>
	<div class="clear"></div>
	<div class="buttons-row">
		<input type="submit" class="primary-action" value="Create"/>
	</div>
}
</div>
