@model JobSystem.Mvc.ViewModels.Jobs.JobDetailsViewModel
@{
    
	ViewBag.Title = String.Format("Job {0}", @Model.JobNumber);
}

@*@Html.Partial("~/Views/JobItem/_Create.cshtml", Model.JobItemCreateModel)*@
<input type="hidden" id="editUrl" value="@Url.Action("Create", "JobItem")"/>
<div id="create-job-item-container">
</div>

<div id="job-top-section">
	<div id="pending-banner"></div>
	<h2>Job @Model.JobNumber</h2>
	<div id="job-details-container">
		<div id="job-details-fields">
			<p>Created @Model.DateCreated</p>
			<p>Order No. - @Model.OrderNumber</p>
			<p>Advice No. - @Model.AdviceNumber</p>
			<p>Contact - @Model.Contact</p>
		</div>
		<div id="job-details-instruction">@Model.Instruction</div>
		<div id="job-details-notes">@Model.Note</div>
	</div>

	<div id="job-details-customer-info">
		<span id="custname">Customer</span>
		<ul>
			<li>@Model.CustomerName</li>
			<li>@Model.CustomerAddress1</li>
			<li>@Model.CustomerAddress2</li>
			<li>@Model.CustomerAddress3</li>
			<li>@Model.CustomerAddress4</li>
			<li>@Model.CustomerAddress5</li>
			<li>@Model.CustomerTelephone</li>
			<li><a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a></li>
		</ul>
	</div>
</div>
 <!-- Start HTML - Vertical tabs -->
    <div id="st_vertical" class="st_vertical">
                        
        <div class="st_tabs_container">
                                                   
            <a href="#prev" class="st_prev"></a>
            <a href="#next" class="st_next"></a>
                                                                                                 
            <div class="st_slide_container">
            
                <ul class="st_tabs">
                    <li><a href="#stv_content_1" rel="v_tab_0" id="@Model.Id" class="st_tab createJobItemButton">Add a new Job Item</a></li>
					@foreach (var jobItem in Model.JobItems)
					{
						<li><a href="#stv_content_1" rel="v_tab_0" class="st_tab getJobItem" id="@jobItem.Id">@jobItem.AssetNo<span>@jobItem.InstrumentDetails</span></a></li>
					}                                                      
                </ul>
            </div> <!-- /.st_slide_container -->
        </div> <!-- /.st_tabs_container -->
    </div> <!-- /#st_vertical -->
    <!-- End HTML - Vertical tabs -->
	<div id="horz_tabs_container"> 
	<!-- Start HTML - Horizontal tabs -->
		<div id="st_horizontal" class="st_horizontal">
			<!-- This partial is replaced by ajax -->
			@if (@Model.JobItems.Any())
			{
				@Html.Partial("~/Views/JobItem/_Details.cshtml", Model.JobItems.First())
			} else {
				<div id="empty-list">@JobSystem.Resources.JobItems.Messages.NoJobItems</div>
			}
		</div>
	<!-- /#st_horizontal -->
	<!-- End HTML - Horizontal tabs -->           
   </div>
<div class="clear"></div>
