@model IList<JobSystem.Mvc.ViewModels.Orders.OrderIndexViewModel>

@{
    ViewBag.Title = "Orders";
}

<div id="toggle-container">
	<span class="toggle toggle-active toggle-left"><a href="@Url.Action("PendingOrders")">Pending</a></span>
	<span class="toggle toggle-right"><a href="@Url.Action("ApprovedOrders")">Ordered</a></span>
</div>

@if (Model.Any()) {
	<table>
		<tr>
			<th></th>
			<th>Supplier Name</th>
			<th>Instructions</th>
			<th></th>
		</tr>
	@foreach (var item in Model.OrderBy(i => i.SupplierName))
	 {
		<tr>
			<td>
				@Html.CheckBox("toBeConverted", false)
			</td>
			<td>
				@item.SupplierName
			</td>
			<td>
				@item.Instructions
			</td>
			<td>
				<a href="#" class="editConsignmentButton" id="@item.Id">Edit</a>
			</td>
		</tr>
	 }
	</table>
}else{
	<div id="empty-list">@JobSystem.Resources.JobItems.Messages.NoOrders</div>
}


<div id="edit-order-container">
</div>

<input type="hidden" id="editUrl" value="@Url.Action("Edit", "Order")"/>
