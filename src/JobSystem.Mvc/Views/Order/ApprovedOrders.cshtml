@model IList<JobSystem.Mvc.ViewModels.Orders.OrderIndexViewModel>

@{
    ViewBag.Title = "Approved Orders";
}

<div id="toggle-container">
	<span class="toggle toggle-left"><a href="@Url.Action("PendingOrders")">Pending</a></span>
	<span class="toggle toggle-active toggle-right"><a href="@Url.Action("ApprovedOrders")">Ordered</a></span>
</div>

@Html.ActionLink("Raise Order", "CreateIndividualOrder", new { }, new { @class = "primary-action" })

@if (Model.Any()) {
	<table>
		<tr>
			<th>Order No.</th>
			<th>Supplier Name</th>
			<th>Instructions</th>
		</tr>
	@foreach (var item in Model.OrderBy(i => i.SupplierName))
	 {
		<tr>
			<td>
				@Html.ActionLink(@item.OrderNo, "Details", new { id = item.Id })
			</td>
			<td>
				@item.SupplierName
			</td>
			<td>
				@item.Instructions
			</td>
		</tr>
	 }
	</table>
}else{
	<div id="empty-list">@JobSystem.Resources.JobItems.Messages.NoOrders</div>
}


<div id="edit-order-container">
</div>

<input type="hidden" id="editUrl" value="@Url.Action("Edit", "Order")"/>
