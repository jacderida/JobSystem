@model JobSystem.Mvc.ViewModels.Consignments.ConsignmentEditViewModel

<script src="@Url.Content("~/Scripts/autocompletes.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="edit-consignment-container">
@using (Html.BeginForm("EditItem", "Consignment", FormMethod.Post))
{
	@Html.ValidationSummary(true)
	<fieldset class="fieldset-no-legend fieldset-float-left">
		@if (Model.IsPending) {
			<div class="editor-label">
				@Html.LabelFor(model => model.SupplierId)
			</div>
			<div class="editor-field">
				@Html.TextBox("SupplierAutocomplete", @Model.SupplierName, new { id = "supplier-autocomplete" })
				@Html.HiddenFor(model => model.SupplierId, new { id = "SupplierId" })
			</div>
		}
		<div class="editor-label">
			@Html.LabelFor(model => model.Instructions)
		</div>
		<div class="editor-field">
			@Html.TextAreaFor(model => model.Instructions)
			@Html.ValidationMessageFor(model => model.Instructions)
		</div>
		@Html.HiddenFor(model => model.JobItemId)
		@Html.HiddenFor(model => model.Id)
		@Html.HiddenFor(model => model.IsPending)
        @Html.HiddenFor(model => model.ConsignmentId)
	</fieldset>
	<div class="clear"></div>
	<div class="buttons-row">
		<input type="submit" class="primary-action" value="Save"/>
	</div>
	<div class="clear"></div>
}
</div>
