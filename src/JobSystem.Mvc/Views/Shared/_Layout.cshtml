<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/aristo/Aristo.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/fileuploader.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/slidingtabs-horizontal.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/slidingtabs-vertical.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/the-tooltip.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/chosen.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/common.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/fileuploader.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/the-tooltip.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/chosen.jquery.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.mousewheel.min.js")" type="text/javascript" ></script>
	<script src="@Url.Content("~/Scripts/jquery.easing.1.3.js")" type="text/javascript" ></script>
	<script src="@Url.Content("~/Scripts/jquery.slidingtabs.pack.js")" type="text/javascript" ></script>
	<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

</head>
<body>
    @if (Request.IsAuthenticated)
	{
    <div class="page box_shadow">
        <div id="header">
            <div id="title">
                JobSys
             </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">		
					<li>@Html.MenuLink("Jobs", "Index", "Job", "nav-link")</li><li>@Html.MenuLink("Certificates", "Index", "Certificate", "nav-link")</li><li>@Html.MenuLink("Quotes", "Index", "Quote", "nav-link")</li><li>@Html.MenuLink("Consignments", "Index", "Consignment", "nav-link")</li><li>@Html.MenuLink("Orders", "Index", "Order", "nav-link")</li><li>@Html.MenuLink("Delivery", "Index", "Delivery", "nav-link")</li><li>@Html.MenuLink("Invoicing", "Index", "Invoice", "nav-link")</li><li>@Html.MenuLink("Reports", "About", "Home", "nav-link")</li><li id="settings"><a href="#" class="nav-link settings">`</a></li>
                </ul>  
            </div>

				<ul id="admin-menu" class="hidden">
					<li>@Html.MenuLink("Customers", "Index", "Customer", "nav-link")</li>
					<li>@Html.MenuLink("Suppliers", "Index", "Supplier", "nav-link")</li>
					<li>@Html.MenuLink("Instruments", "Index", "Instrument", "nav-link")</li>
					<li>@Html.MenuLink("Test Standards", "Index", "TestStandard", "nav-link")</li>
					<li>@Html.ActionLink("Users", "Index", "UserManagement", new { }, new { @class = "nav-link" })</li>
					<li>@Html.MenuLink("Company Details", "EditCompanyDetails", "Admin", "nav-link")</li>
					<li><a href="#">Certificate Register</a></li>
					<li><a href="#">Safety Standards</a></li>
				</ul>

        </div>
        <div id="main">
            @RenderBody()
        </div>
        @*<div id="footer">
        </div>*@
    </div>
	}
	else
	{ 
       @RenderBody()  
	}

	<!--[if (gte IE 6)&(lte IE 8)]>
	<script defer src="@Url.Content("~/Scripts/selectivizr-min.js")"></script>
	<![endif]-->

</body>
</html>
