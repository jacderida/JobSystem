<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/aristo/Aristo.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/common.js")" type="text/javascript"></script>
</head>
<body>
    @if (Request.IsAuthenticated)
    {
    <div class="page box_shadow">
        <div id="header">
            <div id="title">
                <img src="@Url.Content("~/Content/images/logo_intertek_sc.gif")" />
                @*<a href="/Customer"><img src="@Url.Content("~/Content/images/intertek.jpg")" /></a>*@
             </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    @* <li>@Html.ActionLink("Home", "Index", "Home")</li>*@
					<li>@Html.ActionLink("Jobs", "About", "Home", new { }, new { @class="nav-link" })</li>
					<li>@Html.ActionLink("Orders", "About", "Home", new { }, new { @class="nav-link" })</li>
					<li>@Html.ActionLink("Delivery", "About", "Home", new { }, new { @class="nav-link" })</li>
					<li>@Html.ActionLink("Invoicing", "About", "Home", new { }, new { @class="nav-link" })</li>
					<li>@Html.ActionLink("Reports", "About", "Home", new { }, new { @class="nav-link" })</li>
                    @*<li>@Html.ActionLink("Users", "Index", "UserManagement", new {}, new { @class="nav-link"})</li>*@
                    <li>@Html.ActionLink("Customers", "Index", "Customer", new { }, new { @class="nav-link" })</li>
					<li id="settings"><a href="@Url.Action("About", "Home")" class="nav-link settings">_</a></li>
                </ul>  
            </div>

				<ul id="admin-menu" class="hidden">
					<li><a href="#">Company Details</a></li>
					<li>@Html.ActionLink("User Management", "Index", "UserManagement", new {}, new { @class="nav-link"})</li>
					<li><a href="#">Instruments</a></li>
					<li><a href="#">Certificate Register</a></li>
					<li><a href="#">Safety Standards</a></li>
				</ul>

        </div>
        <div id="main">
            @RenderBody()
        </div>
        @*<div id="footer">
        </div>*@
    </div>
    }
    else
    { 
       @RenderBody()  
    }
</body>
</html>
